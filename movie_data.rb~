class MovieData
	def initialize
		@DB = Sequel.sqlite # memory database
		create_tables
	end

	def create_tables
		@users = make_users_table
		@movies = make_movies_table
		@ratings = make_ratings_table
	end

	def make_users_table
		@DB.create_table :users do
			primary_key :id
			Integer :age
			String :gender
			String :occupation
			String :zip_code
		end

		@DB.[:users]
	end

	def make_movies_table
		@DB.create_table :movies do
			primary_key :id
			String :title
			Date :released
			Boolean :action
			Boolean :adventure
			Boolean :animation
			Boolean :childrens
			Boolean :comedy
			Boolean :crime
			Boolean :documentary
			Boolean :fantasy
			Boolean :noir
			Boolean :horror
			Boolean :musical
			Boolean :mystery
			Boolean :romance
			Boolean :sci_fi
			Boolean :thriller
			Boolean :war
			Boolean :western
		end

		@DB[:movies]
	end

	def make_ratings_table
		@DB.create_table :ratings do
			Integer :user_id
			Integer :movie_id
			Float :rating
		end
	end
		
end
